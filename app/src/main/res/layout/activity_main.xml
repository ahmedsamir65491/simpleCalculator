<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_margin="10dp"
    android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/vi"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/res"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="C"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="⇒"
                        android:rotationY="180"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="7"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b7"
                        android:onClick="b7"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="8"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b8"
                        android:onClick="b8"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="9"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b9"
                        android:onClick="b9"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="÷"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/bDivide"
                        android:onClick="bDivide"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="4"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b4"
                        android:onClick="b4"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="5"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b5"
                        android:onClick="b5"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="6"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b6"
                        android:onClick="b6"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="*"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:backgroundTint="#CCCFDD"
                        android:id="@+id/bMultiply"
                        android:onClick="bMultiply"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="1"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b1"
                        android:onClick="b1"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="2"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b2"
                        android:onClick="b2"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="3"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b3"
                        android:onClick="b3"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="-"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/bMinus"
                        android:onClick="bMinus"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="="
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/bEqual"
                        android:onClick="bEqual"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/b0"
                        android:onClick="b0"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="."
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:text="+"
                        android:textColor="#000000"
                        app:backgroundTint="#CCCFDD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:id="@+id/bBlus"
                        android:onClick="bBlus"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
